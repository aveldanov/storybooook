<h1>All stories</h1>

<div class="row">
  {{#each stories}}
  <div class="col s12 m4">
    <div class="card">
      <div class="card-image">
        {{#if user}} {{{editIcon user.id ../user.id id}}} {{/if}}
      </div>
      <div class="card-content center-align">
        <h5>{{title}}</h5>
        {{!-- sending 2 paramenters String and the length --}}
        <p class="story-text">{{stripTags (truncate body 150)}}</p>
        <br>
        <div class="chip">
          <img src="{{user.image}}" alt="Contact Person">
          <a href="/stories/user/{{user.id}}"> {{user.firstName}} {{user.lastName}}</a>
        </div>
        <small>Posted
          <br> {{formatDate date 'MMMM Do YYYY, h:mm a'}}</small>
        <div class="card-action center-align">
          <a class="btn grey" style="font-size:12px" href="/stories/show/{{id}}">Read More</a>

        </div>



      </div>
    </div>
  </div>
  {{else}}
  <p>No stories found</p>
  {{/each}}
</div>