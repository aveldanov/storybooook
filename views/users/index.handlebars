<h1>Users</h1>

{{#each users}}
 
<div class="chip">
  <img src="{{image}}">
  <a href="/stories/user/{{id}}">{{firstName}} {{lastName}}</a>
</div>
<div class="row">
  {{#each stories}}
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          {{#if}}

            {{{editIcon user.id ./user.id id}}}
          {{/if}}
        </div>
        <div class="card-content center-align">
          <h5>{{title}}</h5>
          <p class="story-text">
          {{stripTags (truncate body 150)}}

          </p>
          <br>
          <div class="chip">
            <img src="{{../image}}">
            <a href="/stories/user/{{../id}}">{â€Œ
            {{../firstName}}
            {{../lastName}}
            </a>
          </div>
        </div>
        <div class="card-action center-align">
          <a class="btn grey" href="/stories/show/{{id}}">Read More</a>
        </div>
      </div>
    </div>
{{else}}    
<p>No stories found</p>
{{/each}}  
</div>
{{/each}}
